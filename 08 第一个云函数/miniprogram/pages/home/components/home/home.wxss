/* components/home/home.wxss */
.body{
  width: 100%;
  margin-bottom: 50rpx;
}
.bg{
  /*fixed 固定位置 absolute 跟随屏幕滚动 */
  width: 100%;
  position: absolute; 
  top: 0rpx;
  z-index: -100;
}
.swiper{
  margin-left: 20rpx;
  margin-right: 20rpx;
  border-radius: 30rpx;
  /* 使内容同样获得圆角 */
  overflow: hidden;
  /* transform: translateY(0); */
}
.mid_menu{
  margin-top: 30rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  background-color: white;
  border-radius: 30rpx;
  padding: 20rpx;
}
.pTitle{
  font-size: x-small;
  text-align:left;
  text-overflow:ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.nPrice{
  color: red;
  font-size: 24rpx;
}
.oPrice{
  color:gray;
  font-size: 16rpx;
  text-decoration: line-through;
}
.change{
  text-align: right;
  font-size:28rpx;
  color:gray;
}
.menu_title{
  margin-bottom: 5rpx;
  color:#333333;
}